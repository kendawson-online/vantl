{
  "name": "@kendawson-online/vantl",
  "author": "Ken Dawson",
  "version": "2.0.6",
  "description": "A vanilla JavaScript library with zero dependencies that generates responsive timelines for both horizontal and vertical layouts",
  "main": "dist/timeline.min.js",
  "homepage": "https://github.com/kendawson-online/vantl",
  "license": "MIT",
  "keywords": [
    "timeline",
    "vanilla",
    "javascript",
    "ui"
  ],
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "test": "vitest",
    "serve:test": "http-server ./ -p 8080",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "e2e": "npx playwright test"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "@playwright/test": "^1.57.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@vitest/coverage-v8": "^4.0.17",
    "cssnano": "^7.1.2",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "rollup": "^4.55.1",
    "rollup-plugin-postcss": "^4.0.2",
    "vitest": "^4.0.17"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kendawson-online/vantl.git"
  },
  "bugs": {
    "url": "https://github.com/kendawson-online/vantl/issues"
  },
  "files": [
    "dist",
    "src/css",
    "src/images"
  ],
  "prepare": "npm run build",
  "publishConfig": {
    "access": "public"
  }
}
